{
  "name": "SIMRYO - Global eSIM Marketplace",
  "short_name": "SIMRYO",
  "description": "Stay connected worldwide with premium eSIM data plans. Instant activation, transparent pricing, coverage in 190+ countries.",
  "version": "1.0.0",
  "manifest_version": 3,
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#0066cc",
  "background_color": "#ffffff",
  "lang": "en-US",
  "dir": "ltr",
  "categories": [
    "travel",
    "business",
    "utilities",
    "productivity"
  ],
  "icons": [
    {
      "src": "/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Browse Plans",
      "short_name": "Plans",
      "description": "Browse eSIM data plans for all destinations",
      "url": "/plans",
      "icons": [
        {
          "src": "/shortcut-plans.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My eSIMs",
      "short_name": "My eSIMs",
      "description": "View and manage your active eSIMs",
      "url": "/profile?tab=esims",
      "icons": [
        {
          "src": "/shortcut-esims.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Support",
      "short_name": "Support",
      "description": "Get help and customer support",
      "url": "/support",
      "icons": [
        {
          "src": "/shortcut-support.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Setup Guide",
      "short_name": "Setup",
      "description": "Learn how to install your eSIM",
      "url": "/setup",
      "icons": [
        {
          "src": "/shortcut-setup.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Browse global eSIM plans"
    },
    {
      "src": "/screenshot-mobile-2.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Instant eSIM activation"
    },
    {
      "src": "/screenshot-desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "SIMRYO desktop experience"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.simryo.app",
      "id": "com.simryo.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/simryo/id123456789",
      "id": "123456789"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+simryo",
      "url": "/activate?esim=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/activate",
      "accept": {
        "application/x-esim-profile": [".esim"]
      },
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "esim_profile",
          "accept": ["application/x-esim-profile", ".esim"]
        }
      ]
    }
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  "id": "simryo-esim-marketplace"
} 
 
 